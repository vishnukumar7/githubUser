<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:background="@color/white"
        android:id="@+id/mainLay"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:text="@string/user_name"
            android:padding="10dp"
            app:layout_constraintWidth_percent=".3"
            android:textSize="16sp"
            android:id="@+id/userNameTxt"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".7"
            android:id="@+id/userNameView"
            android:padding="10dp"
            app:layout_constraintStart_toEndOf="@id/userNameTxt"
            android:textSize="16sp"
          app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:text="@string/email"
            android:padding="10dp"
            app:layout_constraintWidth_percent=".3"
            android:textSize="16sp"
            android:id="@+id/userMailTxt"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userNameTxt"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".7"
            android:id="@+id/userMailView"
            android:padding="10dp"
            app:layout_constraintStart_toEndOf="@id/userMailTxt"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/userNameView"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:text="@string/status"
            android:padding="10dp"
            app:layout_constraintWidth_percent=".3"
            android:textSize="16sp"
            android:id="@+id/userStatusTxt"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/userMailTxt"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".7"
            android:id="@+id/userStatusView"
            android:padding="10dp"
            app:layout_constraintStart_toEndOf="@id/userStatusTxt"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/userMailView"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            app:layout_constraintTop_toBottomOf="@id/userStatusView"
            android:background="@color/divider"
            android:layout_marginTop="5dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>